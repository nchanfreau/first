<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nataliechanfreau.myapplication.SecondActivity"
    android:id="@+id/blue_relative"
    android:background="#351c758d">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Green please"
        android:id="@+id/button2"
        android:onClick="onButtonClick"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="I need a"
        android:id="@+id/textView4"
        android:editable="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="94"
        android:id="@+id/gradeRequired"
        android:editable="true"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="on my final to get a(n)"
        android:id="@+id/textView2"
        android:editable="true"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/gradeRequired"
        android:layout_centerHorizontal="true"
        android:textSize="30dp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_centerVertical="true"
        android:max="100"
        android:indeterminate="false"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:progress="93" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="93"
        android:id="@+id/gradeGoal"
        android:layout_below="@+id/seekBar"
        android:layout_centerHorizontal="true"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="in the class"
        android:id="@+id/textView6"
        android:editable="true"
        android:layout_marginTop="41dp"
        android:textSize="30dp"
        android:layout_below="@+id/gradeGoal"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
